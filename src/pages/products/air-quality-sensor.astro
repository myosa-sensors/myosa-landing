---
import Breadcrumbs from '~/components/Breadcrumbs.astro';
import List from '~/components/List.astro';
import Swiper from '~/components/Swiper.astro';
import Table from '~/components/Table.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'CCS811 Air Quality Gas Sensor',
  subtitle: 'CO2 and VOC Detection for Indoor Air Quality',
};

const images = ['/images/CCS811-1.jpg', '/images/CCS811-2.png', '/images/CCS811-3.jpg'];

const introduction = `The CCS811 is a digital gas sensor that monitors indoor air quality by measuring CO2 and volatile organic compounds (VOCs). Itâ€™s ideal for IoT and smart home applications focused on air quality monitoring.`;

const featureList = [
  'Measures CO2 and VOCs',
  'Ultra-low power consumption',
  'I2C interface',
  'Built-in environmental compensation',
];

const specifications = [
  { label: 'Supply Voltage', value: '1.8V - 3.6V' },
  { label: 'CO2 Range', value: '400 - 8192 ppm' },
  { label: 'VOC Range', value: '0 - 1187 ppb' },
];

const references = [
  {
    label: 'CCS811 Datasheet',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
  {
    label: 'Air Quality Monitoring Guide',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
  {
    label: 'Example Code',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
];
const applicationList = ['Air quality monitors', 'HVAC control systems', 'Smart home devices'];
---

<Layout metadata={metadata}>
  <div class="py-8 max-w-5xl mx-auto px-8 flex flex-col gap-10">
    <Breadcrumbs
      labelLinkArray={[
        { label: 'Home', link: '/' },
        { label: 'Products', link: '#' },
        { label: metadata.title, link: '#' },
      ]}
    />

    <div class="flex flex-col-reverse md:flex-row gap-10">
      <Swiper images={images} />
      <div class="max-w-sm gap-3 flex flex-col">
        <h2 class="text-3xl font-bold">{metadata.title}</h2>
        <h2 class="text-xl">{metadata.subtitle}</h2>
        <p class="">{introduction}</p>
      </div>
    </div>

    <div class="py-10 gap-20">
      <p class="">{introduction}</p>

      <List title="Key Features" list={featureList} />
      <List title="Applications" list={applicationList} />

      <Table title="Specifications" data={specifications} />
      <Table title="Documents & Resources" data={references} />
    </div>
  </div>
</Layout>
