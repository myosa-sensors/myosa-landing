---
import List from '~/components/List.astro';
import Swiper from '~/components/Swiper.astro';
import Table from '~/components/Table.astro';
import Headline from '~/components/ui/Headline.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'BMP180 Barometric Pressure Sensor',
  subtitle: 'High-Accuracy Pressure and Altitude Measurement',
};

const images = ['/images/BMP180-1.jpg', '/images/BMP180-2.jpg'];

const introduction = `The BMP180 provides accurate atmospheric pressure data and altitude measurements, making it ideal for weather stations, altimeters, and GPS navigation enhancement.`;

const featureList = ['High-precision pressure measurement', 'Altitude calculation', 'Low power consumption'];

const specifications = [
  { label: 'Supply Voltage', value: '1.8V - 3.6V' },
  { label: 'Communication', value: 'I2C' },
  { label: 'Pressure Range', value: ' 300 to 1100 hPa' },
  { label: 'Temperature Range', value: ' -40°C to +85°C' },
];

const references = [
  {
    label: 'BMP180 Datasheet',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
  {
    label: 'Altimeter Calculation Guide',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
  {
    label: 'Pressure Sensor Library',
    link: 'https://invensense.tdk.com/wp-content/uploads/2015/02/MPU-6000-Datasheet1.pdf',
  },
];
const applicationList = ['Altimeters', 'Weather stations', 'GPS navigation'];
---

<Layout metadata={metadata}>
  <div class="py-8 max-w-5xl mx-auto px-8">
    <Headline title={metadata.title} subtitle={metadata.subtitle} />
    <Swiper images={images} name="barometer" />

    <div class="py-10 gap-20">
      <p class="">{introduction}</p>

      <List title="Key Features" list={featureList} />
      <List title="Applications" list={applicationList} />

      <Table title="Specifications" data={specifications} />
      <Table title="Documents & Resources" data={references} />
    </div>
  </div>
</Layout>
