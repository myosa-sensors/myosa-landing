---
import Breadcrumbs from '~/components/Breadcrumbs.astro';
import Layout from '~/layouts/PageLayout.astro';
import List from '../../components/List.astro';
import Table from '../../components/Table.astro';

const metadata = {
  title: 'MYOSA Legacy Kit',
  subtitle: 'Your full-fledged IoT and Sensor Development Kit',
};

const images = ['/images/CCS811-1.jpg', '/images/CCS811-2.png', '/images/CCS811-3.jpg'];

const introduction = `The MYOSA Legacy Kit is designed for robust IoT and sensor-based projects, offering a range of sensors and a powerful actuator system. With an integrated ESP32-based motherboard, this kit is ideal for developers looking for environmental sensing, motion tracking, and control capabilities in a single package.`;

const featureList = [
  'Seamless I2C communication for all components',
  'Easy integration with kit through USB-C',
  '4-wire JST hassle-free connection for components',
  'Stackable design',
];

// const specifications = [
//   { label: 'Communication', value: 'I2C' },
//   { label: 'TRIAC Voltage', value: '240V AC' },
//   { label: 'Buzzer Frequency', value: '2kHz' },
// ];

const references = [
  //   {
  //     label: 'ESP32 Datasheet',
  //     link: 'https://www.espressif.com/sites/default/files/documentation/esp32-wroom-32e_esp32-wroom-32ue_datasheet_en.pdf',
  //   },
  {
    label: 'Getting Started Guide',
    link: 'https://wiki.myosa-sensors.org/docs/intro',
  },
  {
    label: 'Example codes and libraries',
    link: 'https://github.com/myosa-sensors/arduino-libraries',
  },
];
const applicationList = [
  'IoT systems',
  'Smart home devices',
  'Environmental monitoring',
  'Motion sensing and gesture control',
  'Data logging and display projects',
];
---

<Layout metadata={metadata}>
  <div class="py-8 max-w-5xl mx-auto px-8 flex flex-col gap-10">
    <Breadcrumbs
      labelLinkArray={[
        { label: 'Home', link: '/' },
        { label: 'Kits', link: '#' },
        { label: metadata.title, link: '#' },
      ]}
    />

    <div>
      <h2 class="text-4xl font-bold text-center">{metadata.title}</h2>
      <h2 class="text-xl text-center">{metadata.subtitle}</h2>
    </div>

    <div class="py-10 gap-20">
      <p class="">{introduction}</p>

      <List title="Key Features" list={featureList} />
      <List title="Applications" list={applicationList} />

      <!-- <Table title="Specifications" data={specifications} /> -->
      <Table title="Documents & Resources" data={references} />
    </div>
  </div>
</Layout>
