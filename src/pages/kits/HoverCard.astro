---
const { link, title, subtitle, image, imageClass } = Astro.props;
---

<a href={link} target="_blank">
  <div
    class="bg-slate-100 dark:bg-slate-900 group rounded-xl transition-transform duration-300 ease-in-out transform hover:scale-105 hover:shadow-md p-2 flex flex-col gap-2 justify-center items-center"
  >
    <img
      src={image}
      class={'thumbnail object-fill rounded-xl duration-500 ease-in-out group-hover:scale-125   ' + imageClass}
    />
    <h4 class="text-lg font-bold text-center">{title}</h4>
    <p class="opacity-0 transition-opacity duration-500 ease-in-out group-hover:opacity-100 -mt-2">
      {subtitle}
    </p>
  </div>
</a>
